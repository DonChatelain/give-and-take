body {
  padding-top: 70px;
}

h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6 {
  color: #783647;
}

h1 {
  margin-top: 0;
}

.aside {
  display: none;
}

.panel {
  height: 150px;
}

@media (min-width: 768px) {
  .aside {
    display: block;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 240px;
    height: 100%;
    background-color: #242424;
    overflow-y: scroll;

    .container-fluid {
      width: 240px;
      margin-top: 50px;
    }
  }

  .main {
    .container-fluid {
      padding-left: 255px;
    }
  }
}
