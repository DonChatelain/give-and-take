h1 {
  margin-top: 0;
  margin-bottom: 15px;
}

.aside {
  background-color: #e9e9e9;
  border-bottom: 1px solid #ddd;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  overflow-y: scroll;
  z-index: 1;

  .container-fluid {
    margin-top: 50px;
  }
}

.panel {
  height: 150px;
  border-radius: 0;
}

.panel--left-image .panel-body {
  position: relative;
  padding-left: 85px;
}

.panel__image {
  position: absolute;
  top: 0;
  left: 0;
}

@media (min-width: 768px) {
  .aside {
    display: block !important;
    bottom: 0;
    border-right: 1px solid #ddd;
    border-bottom: none;
    width: 240px;
    height: 100% !important;

    .container-fluid {
      width: 240px;
    }
  }

  .main {
    .container-fluid {
      padding-left: 255px;
    }
  }

  .footer {
    padding-left: 255px;
  }
}
