h1 {
  margin-top: 0;
}

.aside {
  display: none;
  background-color: #e9e9e9;
  border-right: 1px solid #ddd;
}

.panel {
  height: 150px;
  border-radius: 0;
}

.panel--left-image .panel-body {
  position: relative;
  padding-left: 85px;
}

.panel__image {
  position: absolute;
  top: 0;
  left: 0;
}

@media (min-width: 768px) {
  .aside {
    display: block;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 240px;
    height: 100%;
    overflow-y: scroll;

    .container-fluid {
      width: 240px;
      margin-top: 50px;
    }
  }

  .main {
    .container-fluid {
      padding-left: 255px;
    }
  }

  .footer {
    padding-left: 255px;
  }
}
