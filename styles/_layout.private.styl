.page--dashboard {
  h1 {
    margin-top: 0;
    margin-bottom: 15px;
  }

  .aside {
    background-color: #e9e9e9;
    border-bottom: 1px solid #ddd;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    overflow-y: scroll;
    z-index: 1;
  }

  .aside .container-fluid {
    margin-top: 50px;
  }
}

@media (min-width: 768px) {
  .page--dashboard {
    .aside {
      display: block !important;
      bottom: 0;
      border-right: 1px solid #ddd;
      border-bottom: none;
      width: 240px;
      height: 100% !important;
    }

    .aside .container-fluid {
      width: 240px;
    }

    .main .container-fluid {
      padding-left: 255px;
    }

    .footer {
      padding-left: 255px;
    }
  }
}
