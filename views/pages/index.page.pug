extends ../layouts/default.layout.pug

block content
  h1.text-center Give &amp; Take
  //- p.text-center A completely community driven platform to share knowledge, learn from each other and teach the things your passionate about
  div.row
    div.col-xs-12.col-md-4.col-md-offset-4
      ul
        li <strong> share</strong> knowledge
        li learn from each other
        li teach topics you're passionate about
        li completely community driven
  h4.text-center Sign up to learn about anything you can imagine for free and share your knowledge with others
  div.row
    div.col-xs-12.col-sm-6.col-sm-offset-3
      ul.nav.nav-tabs.nav-justified(role="tablist")
        li.active(role="presentation")
          a(href="#register" role="tab" data-toggle="tab" aria-controls="register") Create an account
        li(role="presentation")
          a(href="#login" role="tab" data-toggle="tab" aria-controls="login") Log In
      div.tab-content
        div#register.tab-pane.active(role="tabpanel")
          form.login-form(action="/api/auth/register" method="post")
            div.form-group
              label(for="register-first-name") First Name
              input.form-control#register-first-name(type="input" name="first_name" autocomplete="off")
            div.form-group
              label(for="register-last-name") Last Name
              input.form-control#register-last-name(type="input" name="last_name" autocomplete="off")
            div.form-group
              label(for="register-username") Username
              input.form-control#register-username(type="input" name="username" autocomplete="off")
            div.form-group
              label(for="password") Password
              input.form-control#register-password(type="password" name="password" autocomplete="off")
            div.form-group
              label(for="register-gender-male") Gender
              div.radio
                label(for="register-gender-male")
                  input#register-gender-male(type="radio" name="gender" value="male")
                  span Male
              div.radio
                label(for="register-gender-female")
                  input#register-gender-female(type="radio" name="gender" value="female")
                  span Female
            div.form-group
              label(for="register-zip") Zip
              input.form-control#register-zip(type="input" name="zip" autocomplete="off")
            div.form-group
              label(for="register-topic") Topic
              select.form-control#register-topic(name="topic")
                option(value="default" selected) Choose a Major Topic
            div.form-group
              label(for="register-subtopics") Subtopics
              div.input-group
                input.form-control#register-subtopics(type="input" name="subtopics" autocomplete="off")
                span.input-group-btn
                  button.btn.btn-default(type="button") Add
            div.form-group
              input.btn.btn-primary(type="submit" value="Register")
        div#login.tab-pane(role="tabpanel")
          form.login-form(action="/api/auth/login" method="post")
            div.form-group
              label(for="login-username") Username
              input.form-control#login-username(type="input" name="username" autocomplete="off")
            div.form-group
              label(for="login-password") Password
              input.form-control#login-password(type="password" name="password" autocomplete="off")
            div.form-group
              input.btn.btn-primary(type="submit" value="Log In")
