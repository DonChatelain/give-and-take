    button.btn.btn-primary.btn-lg(data-toggle="modal" data-target="#modal-profile") Launch
    div.modal.fade#modal-profile(tabindex="-1" role="dialog" aria-labelledby="modal-profile")
      div.modal-dialog.modal-lg(role="document")
        div.modal-content
          div.modal-header
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
            h2.modal-title.h4#modal-profile {username}
          div.modal-body
            div
              img.pull-left(src="/images/placeholderPics/avatar2.png")
              h3 {topic}
              h4 {subtopic}
              p {gender}
              p {location}
              //- p {personal-message}
            div
              h3 Send {username} a message
              form
                div.form-group
                  label(for="name") Name
                  input.form-control(type="text" name="name")
                div.form-group
                  label(for="email") Email
                  input.form-control(type="text" name="email")
                div.form-group
                  label(for="message") Message
                  textarea.form-control(name="message")
